<h1>List of Photos</h1>
<hr>
<form action="/insert_photo">
  <label for="image_id">Image</label>
  <input id="image_id" name="query_image">

  <label for="caption_id">Caption</label>
  <textarea id="caption_id" name="query_caption"></textarea>

  <label for="owner_id">Owner ID</label>
  <input id="owner_id" name="query_owner_id">


  <button>Add photo</button>
</form>



<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>
<% @list_of_photos.each do |a_photo| %>
  <tr>
    <td>
      <img src="<%=a_photo.image %>">
    </td>

    <td>
      <%= a_photo.caption %>
    </td>

    <td>
      <%= a_photo.poster.username%>
    </td>

    <td>
  <%= a_photo.created_at%>    
</td>

    <td>
      <a href="/photos/<%= a_photo.id%>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
  </table>
